<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view_model.fragments.view_profile.ViewProfileFragment"
    android:background="@color/colorBg"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="3dp"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="26dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/viewProfileImageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_profile_placeholder" />
            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/viewProfileImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/viewProfileImageView">
                <TextView
                    android:id="@+id/viewProfileUsernameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="iskenxan"
                    android:textSize="18dp"
                    app:layout_constraintVertical_chainStyle="spread_inside"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/viewProfilePostsTextView"
                    />
                <TextView
                    android:id="@+id/viewProfilePostsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="11dp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/viewProfileFollowersTextView"
                    app:layout_constraintTop_toBottomOf="@id/viewProfileUsernameTextView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="12\nPosts"/>
                <TextView
                    android:id="@+id/viewProfileFollowersTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="11dp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toEndOf="@id/viewProfilePostsTextView"
                    app:layout_constraintEnd_toStartOf="@id/viewProfileFollowingTextView"
                    app:layout_constraintTop_toTopOf="@id/viewProfilePostsTextView"
                    app:layout_constraintBottom_toBottomOf="@id/viewProfilePostsTextView"
                    android:text="12\nPosts"/>
                <TextView
                    android:id="@+id/viewProfileFollowingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="11dp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toEndOf="@id/viewProfileFollowersTextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/viewProfilePostsTextView"
                    app:layout_constraintBottom_toBottomOf="@id/viewProfilePostsTextView"
                    android:text="12\nPosts"/>

            </android.support.constraint.ConstraintLayout>
            <Button
                android:id="@+id/viewProfileFollowButton"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:text="follow"
                android:textSize="10sp"
                android:layout_marginTop="20dp"
                style="@style/actionButton"
                card_view:layout_constraintTop_toBottomOf="@id/viewProfileImageView"
                card_view:layout_constraintBottom_toTopOf="@id/viewProfileSeparator"
                card_view:layout_constraintStart_toStartOf="@id/viewProfileImageView"
                card_view:layout_constraintEnd_toEndOf="@id/viewProfileImageView"/>
            <View
                android:id="@+id/viewProfileSeparator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBg"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/viewProfileFollowButton" />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:id="@+id/viewProfileRecyclerView"
                card_view:layout_constraintTop_toBottomOf="@id/viewProfileSeparator"
                card_view:layout_constraintBottom_toBottomOf="parent"
                />
            <LinearLayout
                android:id="@+id/viewProfileEmptyListContainer"
                android:layout_width="match_parent"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSecondary"
                    android:textSize="20sp"
                    android:layout_marginBottom="20dp"
                    android:text="Nothing here yet"/>
                <ImageView
                    style="@style/emptyListImageView"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>