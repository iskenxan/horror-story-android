<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:layout_height="match_parent"
        android:background="@drawable/login_bg">

        <ImageView
            android:id="@+id/signupTopIcon"
            android:layout_width="80dp"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/signupTittleTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_icon"
            tools:layout_editor_absoluteY="123dp" />
        <TextView
            android:id="@+id/signupTittleTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Spookies"
            android:textColor="@color/colorPrimaryDark"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/signupCardView"
            app:layout_constraintTop_toBottomOf="@id/signupTopIcon"
            />
        <android.support.v7.widget.CardView
            android:id="@+id/signupCardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="4"
            app:layout_constraintTop_toBottomOf="@id/signupTittleTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingTop="16dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingBottom="16dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Signup"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/signupLabel"/>
                <ScrollView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fillViewport="true"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/signupLabel"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:minHeight="330dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your username"
                            android:textColor="@color/colorPrimary"
                            android:id="@+id/signupUsernameLabel"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_chainStyle="spread_inside"
                            app:layout_constraintBottom_toTopOf="@id/signupUsernameInputLayout"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/signupUsernameInputLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/signupUsernameLabel"
                            app:layout_constraintBottom_toTopOf="@id/signupPassLabel"
                            app:errorEnabled="true">
                        <EditText
                            style="@style/customEditText"
                            android:layout_width="match_parent"
                            android:drawablePadding="10dp"
                            android:drawableLeft="@drawable/user_icon_white"
                            android:id="@+id/signupUsernameInput"/>
                        </android.support.design.widget.TextInputLayout>
                        <TextView
                            android:id="@+id/signupPassLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:text="Your password"
                            app:layout_constraintTop_toBottomOf="@id/signupUsernameInputLayout"
                            app:layout_constraintBottom_toTopOf="@id/signupPassInputLayout"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/signupPassInputLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/signupPassRepeatLabel"
                            app:layout_constraintTop_toBottomOf="@+id/signupPassLabel"
                            app:errorEnabled="true">
                            <EditText
                                style="@style/customEditText"
                                android:layout_width="match_parent"
                                android:inputType="textPassword"
                                android:drawablePadding="10dp"
                                android:drawableLeft="@drawable/lock_icon_white"
                                android:id="@+id/signupPassInput"/>
                        </android.support.design.widget.TextInputLayout>
                        <TextView
                            android:id="@+id/signupPassRepeatLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Repeat password"
                            android:textColor="@color/colorPrimary"
                            app:layout_constraintTop_toBottomOf="@id/signupPassInputLayout"
                            app:layout_constraintBottom_toTopOf="@id/signupPassRepeatInputLayout"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/signupPassRepeatInputLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/signupButton"
                            app:layout_constraintTop_toBottomOf="@+id/signupPassInputLayout"
                            app:errorEnabled="true">
                            <EditText
                                style="@style/customEditText"
                                android:layout_width="match_parent"
                                android:inputType="textPassword"
                                android:drawablePadding="10dp"
                                android:drawableLeft="@drawable/lock_icon_white"
                                android:id="@+id/signupPassRepeatInput"/>
                        </android.support.design.widget.TextInputLayout>
                        <Button
                            android:id="@+id/signupButton"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:text="sign up"
                            android:hint="repeat password"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/signupLoginLinkTextView"
                            app:layout_constraintTop_toBottomOf="@id/signupPassRepeatInputLayout"
                            style="@style/actionButton" />
                        <TextView
                            android:id="@+id/signupLoginLinkTextView"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorSecondary"
                            android:textAlignment="center"
                            android:text="Already a user? Log in"
                            app:layout_constraintTop_toBottomOf="@id/signupButton"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </android.support.constraint.ConstraintLayout>
                </ScrollView>
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
