<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">
    <TextView
        android:id="@+id/readPostDialogTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You reached the end!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/readPostDialogSeparator"
        />
    <View
        android:id="@+id/readPostDialogSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/readPostDialogTextView"
        android:background="@color/colorBg"
        android:layout_marginTop="10dp" />
    <com.sackcentury.shinebuttonlib.ShineButton
        android:id="@+id/readPostDialogFavoriteButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        app:btn_color="@android:color/darker_gray"
        app:btn_fill_color="@color/colorAccent"
        app:allow_random_color="false"
        app:siShape="@drawable/icon_favorite"
        app:layout_constraintTop_toBottomOf="@id/readPostDialogSeparator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/readPostDialogCommendImageView"
        app:layout_constraintBottom_toTopOf="@id/readPostDialogBackTextView"/>
<ImageView
    android:id="@+id/readPostDialogCommendImageView"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/comment_icon"
    android:layout_marginRight="10dp"
    app:layout_constraintTop_toTopOf="@id/readPostDialogFavoriteButton"
    app:layout_constraintStart_toEndOf="@id/readPostDialogFavoriteButton"
    app:layout_constraintEnd_toEndOf="parent"
    />
<TextView
    android:id="@+id/readPostDialogBackTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Back"
    android:textColor="@color/colorSecondary"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/readPostDialogFavoriteButton"
    app:layout_constraintBottom_toBottomOf="parent"
    android:textSize="18sp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginBottom="15dp"
    android:padding="3dp"/>
</android.support.constraint.ConstraintLayout>