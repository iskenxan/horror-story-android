<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view_model.fragments.post.edit_post.EditPostFragment"
    android:background="@color/colorBg">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_height="200dp"
        android:background="@android:color/white"
        android:id="@+id/editPostTopContainer">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/editPostTopButtonsContainer">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unpublish"
                android:visibility="gone"
                android:textColor="@color/colorSecondary"
                android:id="@+id/editPostUnpublishTextView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="@color/colorSecondary"
                android:id="@+id/editPostDeletePostTextView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/editPostSaveDraftButton"
                />
            <Button
                android:id="@+id/editPostSaveDraftButton"
                android:layout_width="78dp"
                android:layout_height="25dp"
                style="@style/secondaryButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/editPostDeletePostTextView"
                app:layout_constraintEnd_toStartOf="@id/editPostPublishButton"
                android:text="Save draft"
                android:textSize="10sp"
                />
            <Button
                android:id="@+id/editPostPublishButton"
                android:layout_width="78dp"
                android:layout_height="25dp"
                android:background="@drawable/primary_btn_bg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/editPostSaveDraftButton"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Publish"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                />
            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/editPostDeleteMessagesImageView"
                android:src="@drawable/delete_icon"/>
        </android.support.constraint.ConstraintLayout>
        <View
            android:id="@+id/editPostTopSeparator"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorBg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editPostTopButtonsContainer"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/editPostSettingsContainer"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/editPostTopSeparator">
            <TextView
                android:id="@+id/editPostFragmentTitleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title:"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="@+id/editPostFragmentTitleEditText"
                app:layout_constraintBottom_toBottomOf="@+id/editPostFragmentTitleEditText"
                />
            <EditText
                android:id="@+id/editPostFragmentTitleEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Your story title..."
                android:layout_marginLeft="7dp"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintVertical_chainStyle="spread_inside"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintStart_toEndOf="@id/editPostFragmentTitleLabel"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/editPostFragmentFirstCharacterContainer"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editPostFragmentFirstCharacterContainer"
                app:layout_constraintTop_toBottomOf="@+id/editPostFragmentTitleEditText"
                app:layout_constraintBottom_toTopOf="@+id/editPostFragmentSecondCharacterContainer">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Character #1:"
                    android:textColor="@color/colorPrimary"/>
                <ImageView
                    android:id="@+id/editPostFragmentFirstCharacterColor"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_color_palette"
                    android:layout_marginLeft="12dp"/>
                <TextView
                    android:layout_marginLeft="7dp"
                    android:id="@+id/editPostFragmentFistCharacterTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="not set"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/editPostFragmentFirstCharacterEditIcon"
                    android:layout_width="wrap_content"
                    android:src="@drawable/edit_icon"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editPostFragmentSecondCharacterContainer"
                app:layout_constraintTop_toBottomOf="@+id/editPostFragmentFirstCharacterContainer"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Character #2:"
                    android:textColor="@color/colorPrimary"/>
                <ImageView
                    android:id="@+id/editPostFragmentSecondCharacterColor"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_color_palette"
                    android:layout_marginLeft="12dp"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/editPostFragmentSecondCharacterTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="not set"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/editPostFragmentSecondCharacterEditIcon"
                    android:layout_width="wrap_content"
                    android:src="@drawable/edit_icon"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
    <com.stfalcon.chatkit.messages.MessagesList
        android:id="@+id/editPostMessageList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:dateHeaderTextColor="@android:color/transparent"
        app:dateHeaderPadding="0dp"
        app:outcomingTimeTextSize="0sp"
        app:incomingTimeTextSize="0sp"
        app:incomingTimeTextColor="@android:color/transparent"
        app:outcomingTimeTextColor="@android:color/transparent"
        app:outcomingDefaultBubbleSelectedColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/editPostTopContainer"
        app:layout_constraintBottom_toTopOf="@+id/editPostInputContainer"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/editPostInputContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <Spinner
            android:id="@+id/editPostUserSpinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <com.stfalcon.chatkit.messages.MessageInput
            android:id="@+id/editPostMessageInput"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:inputMaxLines="3"
            app:inputTextSize="14sp"
            android:layout_alignParentBottom="true"
            app:inputHint="Enter your message..."
            app:layout_constraintStart_toEndOf="@id/editPostUserSpinner"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>