<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="410dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="16dp"
    android:paddingLeft="24dp"
    android:paddingRight="16dp"
    android:background="@android:color/white"
    android:minHeight="410dp">
    <TextView
        android:id="@+id/charactersNewCharacterLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Add character:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/characterNewCharacterEditText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/characterNewCharacterEditText"
        app:layout_constraintBottom_toBottomOf="@id/characterNewCharacterEditText"
        android:id="@+id/charactersNewCharacterNameLabel"/>
    <EditText
        android:id="@+id/characterNewCharacterEditText"
        app:layout_constraintTop_toBottomOf="@id/charactersNewCharacterLabel"
        style="@style/customEditText"
        android:layout_width="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_height="32dp"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toEndOf="@id/charactersNewCharacterNameLabel"
        app:layout_constraintEnd_toStartOf="@id/charactersNewCharacterColorButton"/>
    <Button
        android:id="@+id/charactersNewCharacterColorButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:drawableLeft="@drawable/ic_color_pick_white"
        android:paddingLeft="7dp"
        android:background="@drawable/circle_color_palette"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/characterNewCharacterEditText"
        />
    <Button
        android:id="@+id/characterAddButton"
        android:layout_width="90dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Add"
        android:textSize="12sp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toTopOf="@id/charactersNewCharacterSeparator"
        app:layout_constraintTop_toBottomOf="@id/characterNewCharacterEditText"
        style="@style/actionButton" />
    <View
        android:id="@+id/charactersNewCharacterSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBg"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/characterAddButton"
        app:layout_constraintBottom_toTopOf="@id/myProfileViewPagerTabs"/>
    <TextView
        android:id="@+id/charactersCharacterListLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Characters:"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/charactersNewCharacterSeparator"
        app:layout_constraintBottom_toTopOf="@+id/charactersRecyclerView"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/charactersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/charactersCharacterListLabel"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/white">
        <Button
            android:id="@+id/charactersSaveButton"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/primary_btn_bg"
            android:textColor="@android:color/white"
            android:text="View"
            android:textSize="12sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>