<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notificationItemCircleImageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_profile_placeholder"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/notificationItemTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp"
        android:text="iskenxan started following you"
        app:layout_constraintStart_toEndOf="@id/notificationItemCircleImageView"
        app:layout_constraintEnd_toStartOf="@id/notificationItemIconImageView"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/notificationItemIconImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBg"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/notificationItemCircleImageView"/>


</android.support.constraint.ConstraintLayout>