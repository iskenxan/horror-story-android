<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="samatov.space.spookies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <provider
            android:authorities="space.samatov.android.searchuserprovider"
            android:name=".model.SearchUsersContentProvider"
            android:exported="false"/>
        <activity
            android:name=".view_model.activities.AuthActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view_model.activities.MyProfileActivity"
            android:screenOrientation="portrait">
            <meta-data android:name="android.app.default_searchable"
                android:value=".view_model.activities.SearchableActivity" />
        </activity>

        <activity android:name=".view_model.activities.SearchableActivity"
            android:parentActivityName=".view_model.activities.MyProfileActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view_model.activities.MyProfileActivity" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <activity
            android:name=".view_model.activities.EditPostActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>